<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chen.domain.EquipmentMapper">
	<resultMap type="com.chen.model.Equipment" id="backMap">	
	 <id column="id" property="id" jdbcType="INTEGER"/>
	 <result column="name" property="name" jdbcType="VARCHAR"/>
	 <result column="no" property="no" jdbcType="VARCHAR"/>
	  <result column="typeId" property="typeId" jdbcType="INTEGER"/>
	 <result column="typeName" property="typeName" jdbcType="VARCHAR"/>
	  <result column="state" property="state" jdbcType="INTEGER"/>
	 <result column="remark" property="remark" jdbcType="VARCHAR"/>
	</resultMap>
    
 <sql id="mainSql">
 	SELECT * FROM  t_equipment p
 </sql>   
 
	<select id="findAll" resultMap="backMap">
		<include refid="mainSql"/>
	</select>
	
	<select id="selectByPrimaryKey" parameterType="java.lang.Integer">
	   select *   from t_equipment where id =#{id,jdbcType=INTEGER}
	</select>
	<!-- 保存部门信息 -->
	 <insert id="insert" parameterType="com.chen.model.Equipment" >
    insert into t_equipment (id, name,no,typeId,state,remark)
    values (#{id,jdbcType=INTEGER}, #{name,jdbcType=VARCHAR},#{no,jdbcType=VARCHAR},
    		#{typeId,jdbcType=INTEGER},#{state,jdbcType=INTEGER},#{remark,jdbcType=VARCHAR})
  </insert>
	
	<insert id="insertSelective" parameterType="com.chen.model.Equipment" >
    insert into t_equipment
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        id,
      </if>
      <if test="name != null" >
        name,
      </if>
      <if test="no != null" >
        no,
      </if>
       <if test="typeId != null" >
        typeId,
      </if>
      <if test="state != null" >
        state,
      </if>
        <if test="remark != null" >
        remark,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        #{id,jdbcType=INTEGER},
      </if>
      <if test="name != null" >
        #{name,jdbcType=VARCHAR},
      </if>
       <if test="no != null" >
        #{no,jdbcType=VARCHAR},
      </if>
      <if test="typeId != null" >
        #{typeId,jdbcType=INTEGER},
      </if>
      <if test="state != null" >
        #{state,jdbcType=INTEGER},
      </if>
      <if test="remark != null" >
        #{remark,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>

	
	<update id="updateByPrimaryKey" parameterType="com.chen.model.Equipment" >
    update t_equipment
    set id = #{id,jdbcType=INTEGER},
   	   name = #{name,jdbcType=VARCHAR},
      no = #{no,jdbcType=VARCHAR},
      typeId = #{typeId,jdbcType=INTEGER},
      state = #{state,jdbcType=INTEGER},
      remark = #{remark,jdbcType=VARCHAR}
    where id = #{id,jdbcType=INTEGER}
  </update>
	
	 <update id="updateByPrimaryKeySelective" parameterType="com.chen.model.Equipment" >
    update t_equipment
    <set >
      <if test="id != null" >
        id = #{id,jdbcType=INTEGER},
      </if>
      <if test="name != null" >
        name = #{name,jdbcType=VARCHAR},
      </if>
      <if test="no != null" >
        no = #{no,jdbcType=VARCHAR},
      </if>
        <if test="typeId != null" >
        typeId = #{typeId,jdbcType=INTEGER},
      </if>
        <if test="state != null" >
        state = #{state,jdbcType=INTEGER},
      </if>
      <if test="remark != null" >
        remark = #{remark,jdbcType=VARCHAR},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>
	
	<delete id="deleteByPrimaryKey" parameterType="java.lang.Integer" >
    delete from t_equipment
    where id = #{id,jdbcType=INTEGER}
  </delete>
	
	
	<delete id="deleteByIds" parameterType="Object[]">
		delete from  t_equipment where id in <foreach index="index" item="item" collection="array" separator="," open="(" close=")" >#{item}</foreach>
	</delete>
	 <!-- 查询总条数 ，结合分页使用-->
	<select id="count" resultType="INTEGER">
		SELECT COUNT(*) AS C FROM  t_equipment p
	</select>
	<!-- 分页查询 -->
	<select id="findPageByParam" parameterType="java.util.Map" resultMap="backMap">
		<include refid="mainSql"/>
 		   limit ${start},${rows}
	</select>
</mapper>


